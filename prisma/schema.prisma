generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id() @unique() @default(cuid())
  email      String   @unique()
  first_name String
  last_name  String
  credit     Int      @default(3)
  avatar     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
